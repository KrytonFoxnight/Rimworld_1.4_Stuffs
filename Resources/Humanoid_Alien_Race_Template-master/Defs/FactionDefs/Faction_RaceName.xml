<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef>
		<defName>RaceNameFaction</defName>
		<label>RaceName empire</label>
    <description>A colony of the RaceName race.</description>
    <pawnsPlural>RaceNames</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>RaceName Leader</leaderTitle>
    <startingGoodwill>
      <min>10</min>
      <max>40</max>
    </startingGoodwill>
	<factionNameMaker>NamerFactionOutlander</factionNameMaker>
	<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
	<techLevel>Ultra</techLevel>
	<backstoryFilters>
	  <li>
		<categories>
		<li>Pirate</li>
		<li>Offworlder</li>
		<li>Outlander</li>
		</categories>
	  </li>
	</backstoryFilters>
	<hairTags>
		<li>Urban</li>
		<li>Outlander</li>
		<li>Pirate</li>
		<li>Rural</li>
	</hairTags>
    <naturalColonyGoodwill>
      <min>-60</min>
      <max>0</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
   <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <RaceName_Colonist>50</RaceName_Colonist>
          <RaceName_Leader>250</RaceName_Leader>
          <RaceName_Soldier>130</RaceName_Soldier>
        </options>
      </li>
           <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <RaceName_Colonist>50</RaceName_Colonist>
          <RaceName_Leader>250</RaceName_Leader>
        </options>
      </li>
	  <li>
      <kindDef>Trader</kindDef>
        <traders>
          <RaceName_Trader>1</RaceName_Trader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <RaceName_Soldier>130</RaceName_Soldier>
        </guards>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
          <RaceName_Colonist>50</RaceName_Colonist>
          <RaceName_Leader>250</RaceName_Leader>
          <RaceName_Soldier>130</RaceName_Soldier>
        </options>
      </li>
    </pawnGroupMakers>
	
	<factionIconPath>World/WorldObjects/Expanding/PirateOutpost</factionIconPath>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	<!--
    <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
	-->
  </FactionDef>

</Defs>